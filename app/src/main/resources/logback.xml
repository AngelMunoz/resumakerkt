<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>utf-8</charset>
            <pattern>[%d{yyyy-MM-dd} %yellow(%d{HH:mm:ss}) %highlight(%.-3level)] %highlight(%logger{25}): %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
